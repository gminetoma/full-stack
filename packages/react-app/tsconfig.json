{
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "module": "esnext",
    "target": "es2022",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noEmit": true,
    "baseUrl": ".",
    "types": ["vitest/globals"],
    "paths": {
      "~/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "**/*.d.ts", "**/*.tsx"],
  "exclude": ["**/generated", "node_modules", "dist"]
}
