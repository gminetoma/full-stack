{
  "name": "full-stack",
  "type": "module",
  "private": true,
  "engines": {
    "bun": ">=1.0.0"
  },
  "workspaces": [
    "packages/*",
    "packages/tools/cypress",
    "packages/tools/storybook"
  ],
  "scripts": {
    "app": "bun --cwd packages/react-app",
    "api": "bun --cwd packages/graphql-api",
    "cypress": "bun --cwd packages/tools/cypress",
    "storybook": "bun --cwd packages/tools/storybook",
    "lint": "bunx --bun biome lint"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.5",
    "@types/bun": "latest",
    "detect-port": "^2.1.0"
  }
}
